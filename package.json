{
  "name": "toast-loader",
  "description": "A modern JS/CSS asset loader",
  "version": "3.0.2",
  "author": "Aur√©lien Delogu <dev@dreamysource.fr> (http://dreamysource.fr)",
  "repository": {
    "type": "git",
    "url": "https://github.com/pyrsmk/toast.git"
  },
  "keywords": [
    "css",
    "js",
    "asset",
    "load",
    "loader",
    "loading"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pyrsmk/toast/issues",
    "email": "dev@dreamysource.fr"
  },
  "homepage": "https://github.com/pyrsmk/toast",
  "main": "dist/toast.js",
  "files": [
    "dist/"
  ],
  "types": "dist/types/",
  "scripts": {
    "build": "npm run lint && npm run bundle && npm run minify && npm run minify-dev",
    "lint": "npx eslint src/*",
    "bundle": "mkdir -p dist && npx tsc && npx rollup -c",
    "minify": "uglifyjs dist/toast.js --compress --output dist/toast.min.js --source-map 'content=inline' && mkdir -p tests/lib && cp -f dist/toast.min.js tests/lib/ &&  mv -f dist/toast.min.js.map tests/lib/",
    "tunnel": "LT -tunnelName karma -user $LT_USERNAME -key $LT_ACCESS_KEY",
    "test": "node node_modules/karma/bin/karma start",
    "chrome": "node node_modules/karma/bin/karma start --browsers lambda_chrome",
    "firefox": "node node_modules/karma/bin/karma start --browsers lambda_firefox",
    "edge": "node node_modules/karma/bin/karma start --browsers lambda_edge",
    "safari": "node node_modules/karma/bin/karma start --browsers lambda_safari",
    "ie11": "node node_modules/karma/bin/karma start --browsers lambda_ie11",
    "ie10": "node node_modules/karma/bin/karma start --browsers lambda_ie10",
    "ie9": "node node_modules/karma/bin/karma start --browsers lambda_ie9"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "@typescript-eslint/typescript-estree": "^3.1.0",
    "chai": "^4.2.0",
    "eslint": "^7.1.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "js-polyfills": "^0.1.42",
    "karma": "^4.0.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sinon-chai": "^2.0.2",
    "karma-webdriver-launcher": "^1.0.5",
    "mocha": "^6.1.1",
    "rollup": "^2.12.1",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "sinon": "^7.3.1",
    "sinon-chai": "^3.3.0",
    "typescript": "^3.9.3",
    "uglify-js": "^3.9.4"
  }
}
