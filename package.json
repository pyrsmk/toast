{
  "name": "toast-loader",
  "description": "A modern JS/CSS asset loader",
  "version": "3.0.0",
  "author": "Aur√©lien Delogu <dev@dreamysource.fr> (http://dreamysource.fr)",
  "repository": {
    "type": "git",
    "url": "https://github.com/pyrsmk/toast.git"
  },
  "keywords": [
    "css",
    "js",
    "asset",
    "load",
    "loader",
    "loading"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pyrsmk/toast/issues",
    "email": "dev@dreamysource.fr"
  },
  "homepage": "http://dreamysource.io/project/toast",
  "main": "dist/toast.js",
  "files": [
    "dist/"
  ],
  "types": "dist/types/",
  "scripts": {
    "build": "node -r esm build.js",
    "tunnel": "LT -tunnelName karma -user $LT_USERNAME -key $LT_ACCESS_KEY",
    "test": "node -r esm node_modules/karma/bin/karma start",
    "chrome": "node -r esm node_modules/karma/bin/karma start --browsers lambda_chrome",
    "firefox": "node -r esm node_modules/karma/bin/karma start --browsers lambda_firefox",
    "edge": "node -r esm node_modules/karma/bin/karma start --browsers lambda_edge",
    "safari": "node -r esm node_modules/karma/bin/karma start --browsers lambda_safari",
    "ie11": "node -r esm node_modules/karma/bin/karma start --browsers lambda_ie11",
    "ie10": "node -r esm node_modules/karma/bin/karma start --browsers lambda_ie10",
    "ie9": "node -r esm node_modules/karma/bin/karma start --browsers lambda_ie9"
  },
  "buildInput": "src/Toast.ts",
  "buildOutput": "dist/toast.js",
  "buildMinOutput": "dist/toast.min.js",
  "buildTestOutput": "tests/lib/toast.min.js",
  "buildBundleName": "toast",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "@typescript-eslint/typescript-estree": "^1.6.0",
    "chai": "^4.2.0",
    "chalk": "^2.4.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "esm": "^3.2.22",
    "js-polyfills": "^0.1.42",
    "karma": "^4.0.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sinon-chai": "^2.0.2",
    "karma-webdriver-launcher": "^1.0.5",
    "mkdirp": "^0.5.1",
    "mocha": "^6.1.1",
    "rollup": "^1.9.0",
    "rollup-plugin-typescript2": "^0.20.1",
    "sinon": "^7.3.1",
    "sinon-chai": "^3.3.0",
    "typescript": "^3.4.1",
    "uglify-js": "^3.5.3"
  }
}
